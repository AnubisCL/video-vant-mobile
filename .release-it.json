{
  "npm": {
    "publish": false
  },
  "git": {
    "push": true,
    "tag": true
  },
  "github": {
    "release": false
  },
  "hooks": {
    "after:bump": "git cliff --bump -o --tag=v${version}"
  },
  "plugins": {
    "@release-it/bumper": {
      "out": [
        {
          "file": "package.json",
          "path": "version",
          "type": "application/json"
        }
      ]
    }
  }
}
