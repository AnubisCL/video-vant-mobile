{
  "hooks": {
    "after:bump": "git cliff --bump -o --tag=v${version}"
  },
  "plugins": {
    "@release-it/bumper": {
      "out": [
        {
          "file": "package.json",
          "path": "project > properties > revision",
          "type": "application/json"
        }
      ]
    }
  }
}
